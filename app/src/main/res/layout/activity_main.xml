<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dcdcdc"
    >

    <com.fan.logoprogressbar.LogoProgressBar
        android:id="@+id/webtoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:max="100"
        app:progress="0"
        app:orientation="round"
        app:full_background="@drawable/ic_next_ep_progress_full"
        app:normal_background="@drawable/ic_next_ep_progress_normal"
        />

    <com.fan.logoprogressbar.LogoProgressBar
        android:id="@+id/webtoon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:max="100"
        app:progress="0"
        app:orientation="horizontal"
        android:layout_toRightOf="@+id/webtoon"
        app:full_background="@drawable/circle_full"
        app:normal_background="@drawable/circle_normal"
        />

    <com.fan.logoprogressbar.LogoProgressBar
        android:id="@+id/webtoon2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:max="100"
        app:progress="0"
        app:orientation="vertical"
        android:layout_toRightOf="@+id/webtoon1"
        app:full_background="@drawable/logo_full"
        app:normal_background="@drawable/logo_nomal"
        />
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="开始"
        />
</RelativeLayout>
